precision mediump float;
varying vec3 N;
varying vec3 L;
varying vec3 E;
varying vec3 R;
varying vec2 vTexCoord;
varying float vDist;
uniform sampler2D uTex;

void main()
{
   const vec4 diffuseColor = vec4(0.8, 0.8, 0.8, 0.0);
   const vec4 specularColor = vec4(0.5, 0.5, 0.5, 0.0);
   const float shininess = 50.0;
   const float falloffDistance = 30.0;

   // diffuse
   float lambertTerm = max(dot(N, L), 0.0);
   float coeff = vDist / falloffDistance;
   float attenuation = clamp(1.0 - coeff * coeff, 0.0, 1.0);
   vec4 color = diffuseColor * texture2D(uTex, vTexCoord) * lambertTerm * attenuation;

   // specular
   float specular = pow(max(0.0, dot(R, E)), shininess);
   color += specularColor * specular;

   gl_FragColor = color;
}
